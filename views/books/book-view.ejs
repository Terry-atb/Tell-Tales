<%- include('../layouts/header') %> 

<div class="uk-width-3-5@s uk-align-center" data-aos="zoom-in-up">
    <%- include('../partials/messages') %>
<div class="row">
        <div class="col-sm-4 col-4 uk-padding-remove">
            <img class="cover" src="<%= viewBook.coverImagePath %> " alt="">
        </div>
    
        <div class="col-sm-8 col-8">
            <div class="h1 uk-heading-bullet uk-text-success text-capitalize Nova-mono">
                <%= viewBook.bookName %>
            </div>
            <div class="small mt-2">
                <%= viewBook.createdAt.toLocaleDateString() %>
            </div>
            <div class="mt-2 uk-text-muted text-capitalize">
                Author: <span class="text-white"><%= viewBook.authorName %></span>
            </div>
            <div class="mt-2 uk-text-muted text-capitalize">
                Genre: <span class="text-white"><%= viewBook.bookGenre %></span>
            </div>
            <div class="mt-3">
                <a href="/book/read/<%= viewBook.id %>" class="btn btn-success mt-1 uk-inline">Read</a>
                <form action="/book/grabbed/<%= viewBook.id %> " method="POST" class="uk-inline">
                    <button class="btn btn-outline-danger mt-1">Grab</button>
                </form>
            </div>
        </div>
</div>

<div class="mt-4">
    <span class="h3 uk-text-muted">Description: </span>
    <br> 
    <span class="text-white Itim"><%= viewBook.bookDescription %></span>
</div>
        
</div>

<%- include('../layouts/footer') %> 
