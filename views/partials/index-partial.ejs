<% book.forEach(book => { %> 
    <div>
        <div class="hvr-grow" data-aos="fade-up">
            <a href="/book/view/<%= book.id %>">
                <div>
                    <img class="cover" src="<%= book.coverImagePath %> " alt="">
                </div>
            </a>
            <div class="h4 mt-2 text-light Nova-mono">
                <%= book.bookName %> 
            </div>
        </div>
    </div>
<% }) %>