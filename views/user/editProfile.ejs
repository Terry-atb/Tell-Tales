<%- include('../layouts/header')  %> 

<form action="/user/edit-profile/<%= user.id %>?_method=PUT" method="POST">

        <img width="80px" src="https://image.flaticon.com/icons/svg/860/860784.svg" alt="" uk-tooltip="title: Profile; pos: top; delay: 200">
        <br>

        <div class="uk-margin">
            <input class="uk-input" type="text" name="username" placeholder="Input" value="<%= user.username %> ">
        </div>

        <div class="uk-margin">
            <textarea class="uk-textarea" rows="5" name="aboutme"placeholder="Textarea">
                <%= user.aboutme %> 
            </textarea>
        </div>

    <button type="submit" class="uk-button uk-button-primary uk-align-center">EDIT</button>
        
</form>

<%- include('../layouts/footer')  %> 
